{
  "name": "blitz-app-with-chakra-ui-template",
  "version": "1.0.0",
  "scripts": {
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "build": "NODE_ENV=production prisma migrate deploy --preview-feature && blitz build",
    "prisma:migrate": "blitz prisma migrate dev --preview-feature",
    "prisma:push": "blitz prisma db push --preview-feature",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate:favicon": "real-favicon generate faviconDescription.json faviconData.json public"
  },
  "browserslist": [
    "defaults"
  ],
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged",
      "pre-push": "tsc && npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@chakra-ui/icons": "1.0.8",
    "@chakra-ui/react": "1.4.2",
    "@chakra-ui/theme-tools": "1.1.2",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@prisma/client": "~2.20.1",
    "@sendgrid/client": "7.4.2",
    "@sendgrid/mail": "7.4.2",
    "blitz": "0.33.1",
    "deepmerge": "4.2.2",
    "final-form": "4.20.2",
    "framer-motion": "4.1.0",
    "next-seo": "4.23.0",
    "postmark": "2.7.3",
    "prisma": "~2.20.1",
    "react": "0.0.0-experimental-3310209d0",
    "react-dom": "0.0.0-experimental-3310209d0",
    "react-error-boundary": "3.1.1",
    "react-final-form": "6.5.3",
    "react-hook-form": "6.15.5",
    "react-icons": "4.2.0",
    "typescript": "4.2.3",
    "zod": "1.11.13"
  },
  "devDependencies": {
    "@chakra-ui/cli": "1.3.0",
    "@types/eslint": "7.2.8",
    "@types/prettier": "2.2.3",
    "@types/preview-email": "2.0.0",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "cli-real-favicon": "latest",
    "eslint": "7.23.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "preview-email": "3.0.4"
  },
  "private": true
}
